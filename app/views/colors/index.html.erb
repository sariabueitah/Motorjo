<section class="PageTitle">
  <div class="row">
    <div class="columns large-12 medium-12 medium-centered large-centered">
      <h2>Listing Color</h2>
    </div>
  </div>
</section>
<section class="DeviseForms">
  <div class="row">
    <div class="large-12 medium-12 columns UserTabs">
      <table>
        <thead>
          <tr>
            <th>Title English</th>
            <th>Title Arabic</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @colors.each do |color| %>
            <tr>
              <td><%= color.title_en %></td>
              <td><%= color.title_ar %></td>
              <td><%= link_to 'Edit', edit_color_path(color) %></td>
              <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Color', new_color_path %>
    </div>
  </div>
</section>