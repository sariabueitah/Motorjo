<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>
      <ul>
        <% @car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="large-12 medium-12 columns CarDetailTabs">
    <ul data-options="deep_linking: true" class="tabs" data-tab>
      <li class="tab-title active"><a href="#Overview">Car Information</a></li>
      <li class="tab-title"><a href="#Description">Car Images and Appearance</a></li>
      <li class="tab-title"><a href="#Contact">Features and Contact Information</a></li>
    </ul>
    <div class="tabs-content">
      <div class="content active clearfix" id="Overview">
        <%= render 'car_main_info', :f => f %>
      </div>
      <div class="content" id="Description">
        <%= render 'car_image_upload', :f => f %>
      </div>
      <div class="content clearfix" id="Contact">
        <%= render 'car_detailed_info', :f => f %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Update Car", :class => 'button tiny buttoncustom' %>
    </div>
  </div>
<% end %>