<section class="PageHead">
  <div class="AdContainer">
    <div class="row">
      <div class="columns large-12 medium-12 medium-centered large-centered">
        <div class="AdArea">Advertisement Area</div>
      </div>
    </div>
  </div>
</section>
<section class="PageTitle">
  <div class="row">
    <div class="columns large-12 medium-12 medium-centered large-centered">
      <h2>Listing Comfort Interior</h2>
    </div>
  </div>
</section>
<section class="DeviseForms">
  <div class="row">
    <div class="large-12 medium-12 columns UserTabs">
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @comfort_interiors.each do |comfort_interior| %>
            <tr>
              <td><%= comfort_interior.title %></td>
              <td><%= link_to 'Edit', edit_comfort_interior_path(comfort_interior) %></td>
              <td><%= link_to 'Destroy', comfort_interior, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Comfort interior', new_comfort_interior_path %>
    </div>
  </div>
</section>