      <%= f.label t(:phone_number) %>
      <%= f.text_field :phone_number %>
    </div>
    <div class="field">
      <%= f.label t(:mobile_number) %>
      <%= f.text_field :mobile_number %>
    </div>
    <div>
      <%= f.label t("city") %>
      <%= f.select :city, Dealer::City.map{ |s| [s[1] , s[0]] } %>
    </div>
    <div class="field">
      <%= f.label t(:gallery_location) %>
      <%= f.text_area :gallery_location %>
    </div>
    <div class="field">
      <%= f.label t(:street_name) %>
      <%= f.text_field :street_name %>
    </div>
    <div class="field">
      <%= f.label t(:building_number) %>
      <%= f.text_field :building_number %>
